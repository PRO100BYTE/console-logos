			<pos>0.42 0.2025</pos>						
			<size>0.55 0.4449</size>
		</image>
		
	<!-- Metadata - Unused -->
		<text name="md_lbl_players, md_players, md_lbl_genre, md_genre, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_releasedate">
