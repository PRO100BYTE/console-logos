	<view name="detailed">
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.695 0.42495</pos>
			<maxSize>0.47205 0.3704</maxSize>
		</image>
	</view>

<!-- Game View - Video -->
	<feature supported="video">
		<view name="video">
			<video name="md_video">
				<origin>0.5 0.5</origin>
				<pos>0.695 0.42495</pos>
				<maxSize>0.47205 0.3704</maxSize>
