<theme>
    <formatVersion>3</formatVersion>	

<!-- System View -->
	<view name="system">	
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/binding_dark.png</path>
		</image>
		
		<image name="background-tint" extra="true">
			<path>./../images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>113A4C88</color>
		</image>
		
		<image name="bottom" extra="true">
			<color>2478A1</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>EDF7FF</color>
		</image>
	
		<helpsystem name="help">
			<textColor>EDF7FF</textColor>
			<iconColor>EDF7FF</iconColor>
		</helpsystem>
		
	<!-- System Specific Images -->
		<image name="overlay" extra="true">
			<color>FCCC85</color>
		</image>
	</view>
	
	
<!-- Game View - All -->
    <view name="basic, detailed, video">
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/binding_dark.png</path>
		</image>
		
		<image name="background-tint" extra="true">
			<path>./../images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>113A4C88</color>
		</image>
		
		<image name="top" extra="true">
			<color>2478A1</color>	
		</image>
		
		<image name="top-highlight" extra="true">
			<color>EDF7FF</color>	
		</image>
		
		<image name="bottom" extra="true">
			<color>2478A1</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>EDF7FF</color>
		</image>
		
		<helpsystem name="help">
			<textColor>EDF7FF</textColor>
			<iconColor>EDF7FF</iconColor>
		</helpsystem>		
		
	<!-- System Specific Images -->
		<image name="logo">
		</image>
		
		<image name="overlay" extra="true">
			<color>FCCC85</color>
		</image>
		
	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<color>9E222BCC</color>
		</image>
	
		<textlist name="gamelist">
			<primaryColor>E2A53B</primaryColor>
			<secondaryColor>E2A53B</secondaryColor>
			<selectorColor>E2A53B</selectorColor>
			<selectedColor>FFFAF3</selectedColor>
		</textlist>
	</view>


<!-- Game View - Basic -->
	<view name="basic">
		<image name="overlay" extra="true">
			<color>EDF7FF99</color>
		</image>
	</view>


<!-- Game View - Detailed, Video -->
	<view name="detailed, video">
	<!-- Game Image -->
		<image name="image-matte" extra="true">
			<color>EDF7FFCC</color>
		</image>
	
	<!-- Metadata -->			
		<image name="meta-matte" extra="true">
			<color>EDF7FFCC</color>
		</image>
		
		<text name="md_lbl_players, md_lbl_genre, md_lbl_developer, md_lbl_publisher, md_lbl_releasedate">
			<color>000000</color>
		</text>
		
		<text name="md_players, md_genre, md_developer, md_publisher">
			<color>000000</color>
		</text>
		
		<datetime name="md_releasedate">
			<color>000000</color>
		</datetime>
		
	<!-- Description -->
		<image name="description-matte" extra="true">
			<color>EDF7FFCC</color>
		</image>
		
		<text name="md_description">
			<color>000000</color>
		</text>		
	</view>
	
</theme>