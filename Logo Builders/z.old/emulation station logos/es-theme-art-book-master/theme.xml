         <size>0.275 1</size>
         <path>./_inc/images/space.png</path>
         <color>141414</color>
      </image>
      <image name="logo">
         <pos>0.8625 0.1527777777777778</pos>
      </image>
      <text name="logoText">
         <pos>0.784375 0.1527777777777778</pos>
         <size>0.15625 0.0555555555555556</size>
         <fontSize>0.0444444444444444</fontSize>
