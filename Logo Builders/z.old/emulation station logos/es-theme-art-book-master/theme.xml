         <forceUppercase>true</forceUppercase>
         <color>555555</color>
      </text>
      <textlist name="gamelist">
         <pos>0.7578125 0.2416666666666667</pos>
         <size>0.209375 0.5555555555555556</size>
      </textlist>
      <image name="help-random" extra="true">
         <origin>0.5 0</origin>
         <pos>0.8625 0.8333333333333333</pos>
      </image>
   </view>

   <view name="video">
      <image name="md_marquee">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <image name="video-background" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.540625 0.705555555555556</pos>
         <size>0.25625 0.3444444444444444</size>
         <path>./_inc/images/space.png</path>
         <color>bbbbbb</color>
      </image>
      <image name="video-screen" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.540625 0.705555555555556</pos>
         <size>0.25 0.3333333333333333</size>
         <path>./_inc/images/space.png</path>
         <color>000000</color>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.540625 0.705555555555556</pos>
         <maxSize>0.25 0.3333333333333333</maxSize>
         <delay>0</delay>
         <default>./_inc/videos/static.mp4</default>
         <showSnapshotNoVideo>false</showSnapshotNoVideo>
         <showSnapshotDelay>false</showSnapshotDelay>
      </video>
   </view>

   <feature supported="z-index">
      <view name="system,basic,detailed,video">
         <image name="background" extra="true">
            <zIndex>1</zIndex>
         </image>
      </view>
      <view name="system">
         <image name="system-border" extra="true">
            <zIndex>100</zIndex>
         </image>
      </view>
      <view name="detailed,video">
         <image name="help-launch" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="help-favorite" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="md-description-border" extra="true">
            <zIndex>100</zIndex>
         </image>
         <text name="logoText">
            <zIndex>200</zIndex>
         </text>
         <image name="help-random" extra="true">
            <zIndex>100</zIndex>
         </image>
      </view>
      <view name="video">
         <image name="video-background" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="video-screen" extra="true">
            <zIndex>105</zIndex>
         </image>
         <video name="md_video">
            <zIndex>110</zIndex>
         </video>
      </view>
   </feature>

</theme>