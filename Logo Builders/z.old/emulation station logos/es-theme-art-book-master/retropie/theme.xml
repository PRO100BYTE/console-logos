<theme>
   <formatVersion>4</formatVersion>
   <include>./../theme.xml</include>
   <include>./../_inc/templates/portrait.xml</include>
   <view name="system, basic, detailed, video">
      <image name="logo">
         <path>./_inc/system.svg</path>
      </image>
   </view>
   <view name="detailed, video">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.225 0.5027777777777778</pos>
      </image>
      <text name="md_rating,md_lbl_lastplayed,md_lbl_players,md_players,md_lbl_releasedate,md_lbl_genre,md_genre">
         <pos>1 1</pos>
      </text>
      <datetime name="md_lastplayed,md_releasedate">
         <pos>1 1</pos>
      </datetime>
      <image name="md-description-border" extra="true">
         <pos>1 1</pos>
      </image>
      <text name="md_description">
         <pos>0.4125 0.5333333333333333</pos>
      </text>
   </view>
</theme>